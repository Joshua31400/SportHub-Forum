<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forum SPORT-HUB</title>
    <link rel="stylesheet" href="/static/style.css">
    <link rel="stylesheet" href="/static/principal.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="/static/js/isactive_nav.js" defer></script>
</head>
<body>
<div class="container">
    <header class="main-header">
        <h1>SPORT-HUB</h1>
        <nav>
            <a href="/">Forum</a>
            <a href="/profile">Profil</a>
            <a href="/liked-posts">Posts Likés</a>
            <a href="/login">Connexion</a>
            <a href="/logout">Déconnexion</a>
        </nav>
    </header>

    <section class="forum-header">
        <h2>Forum de la communauté</h2>
        <a href="/createpost" class="new-topic-btn"><i class="fas fa-plus-circle"></i>Nouveau post</a>
    </section>

    <!-- Section des filtres -->
    <section class="filter-section">
        <div class="filter-container">
            <form id="filter-form" method="get" action="/">
                <div class="filter-group">
                    <label for="category">Catégorie:</label>
                    <select name="category_id" id="category">
                        <option value="">Toutes les catégories</option>
                        {{range .Categories}}
                            <option value="{{.ID}}" {{if eq $.SelectedCategoryID .ID}}selected{{end}}>{{.Name}}</option>
                        {{end}}
                    </select>
                </div>

                <div class="filter-group">
                    <label for="sort">Trier par:</label>
                    <select name="sort" id="sort">
                        <option value="date" {{if eq $.SelectedSort "date"}}selected{{end}}>Date (récent)</option>
                        <option value="likes" {{if eq $.SelectedSort "likes"}}selected{{end}}>Popularité</option>
                    </select>
                </div>

                <div class="filter-group">
                    <label for="limit">Afficher:</label>
                    <select name="limit" id="limit">
                        <option value="10" {{if eq $.SelectedLimit 10}}selected{{end}}>10 posts</option>
                        <option value="25" {{if eq $.SelectedLimit 25}}selected{{end}}>25 posts</option>
                        <option value="50" {{if eq $.SelectedLimit 50}}selected{{end}}>50 posts</option>
                    </select>
                </div>

                <button type="submit" class="filter-btn">Filtrer</button>
                <a href="/" class="reset-btn">Réinitialiser</a>
            </form>
        </div>
    </section>

    <section class="forum-topics">
        {{range .Posts}}
            <a href="/post/{{.ID}}" class="topic-link">
                <div class="topic">
                    <div class="topic-info">
                        <h3>{{.Title}}</h3>
                        <p class="meta">
                            <span><i class="fas fa-user"></i> Posté par: {{.Username}}</span>
                            <span><i class="fas fa-tag"></i> Catégorie: {{.CategoryName}}</span>
                        </p>
                    </div>
                    <div class="topic-stats">
                        <span><i class="far fa-clock"></i> Créé le: {{.CreatedAt.Format "02/01/2006 15:04"}}</span>
                    </div>
                </div>
            </a>
        {{else}}
            <div class="no-topics">
                <p>Aucun post n'a été créé pour le moment.</p>
            </div>
        {{end}}
    </section>

    <footer>
        <p>© 2025 SPORT-HUB - Forum communautaire</p>
    </footer>
</div>
</body>
</html>